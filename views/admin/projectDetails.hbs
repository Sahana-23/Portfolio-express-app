<ol class="breadcrumb mb-0">
    <li class="breadcrumb-item"><a href="/admin/projects">Projects</a></li>
    <li class="breadcrumb-item active ">{{project.name}}</li>
</ol>

{{#if message}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="fas fa-check-circle pr-3"></i>{{message}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-2">
        <h1 class="h2">{{project.name}}</h1>
    </div>
    <form action="/admin/projects/projectDetails/{{project.alias}}" method="POST">
        <div class="form-row">
            <div class="form-group col-md-6 px-3">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" id="name" value="{{project.name}}">
            </div>
            <div class="form-group col-md-6 px-3">
                <label for="alias">Alias</label>
                <input type="text" name="alias" class="form-control" id="alias" value="{{project.alias}}" readonly>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 px-3">
                <label for="github">Github</label>
                <input type="text" name="githubUrl" class="form-control" id="github" value="{{project.githubUrl}}">
            </div>
            <div class="form-group col-md-6 px-3">
                <label for="liveDemo">Live Demo</label>
                <input type="text" name="demoUrl" class="form-control" id="liveDemo" value="{{project.demoUrl}}">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 px-3">
                <label for="subheading">Sub-Heading</label>
                <textarea type="text" name="subheading" class="form-control"
                    id="subheading">{{project.subheading}}</textarea>
            </div>
            <div class="form-group col-md-6 px-3">
                <label for="description">Description</label>
                <textarea type="text" name="description" class="form-control"
                    id="description">{{project.description}}</textarea>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 px-3">
                <label for="tags">Filter Tags</label><br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="filter" value="MERN" id="defaultCheck1"
                        {{#if MERNfilter}}checked{{/if}}>
                    <label class="form-check-label" for="defaultCheck1">
                        MERN stack
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="filter" value="React" id="defaultCheck2"
                        {{#if Reactfilter}}checked{{/if}}>
                    <label class="form-check-label" for="defaultCheck2">
                        React
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="filter" value="JS" id="defaultCheck3"
                        {{#if JSfilter}}checked{{/if}}>
                    <label class="form-check-label" for="defaultCheck3">
                        JavaScript
                    </label>
                </div>
            </div>

            <div class="form-group col-md-3 px-3">
                <label for="coverImage">Cover Image</label><br>
                {{#if project.coverImageUrl}}
                <i class="fas fa-check-circle pr-2 success-icon"></i>
                <span>Cover Image Uploaded.
                    <a href="/admin/projects/projectDetails/upload/coverImage/{{project.alias}}">
                        Change</a>
                </span>

                {{else}}
                <a href="/admin/projects/projectDetails/upload/coverImage/{{project.alias}}"
                    class="btn btn-warning btn-sm ">Upload</a>
                {{/if}}
            </div>

            <div class="form-group col-md-3 px-3">
                <label for="image">Carousel Images</label><br>
                {{#if project.carouselUrl}}
                <i class="fas fa-check-circle pr-2 success-icon"></i>
                <span>Carousel Images Uploaded.
                    <a href="/admin/projects/projectDetails/upload/carouselImage/{{project.alias}}">
                        Change</a>
                </span>
                {{else}}
                <a href="/admin/projects/projectDetails/upload/carouselImage/{{project.alias}}"
                    class="btn btn-warning btn-sm ">Upload</a>
                {{/if}}
            </div>
        </div>
        <button type="submit" class="btn btn-info btn-custom-primary ml-3">Update</button>
    </form>
</div>
</div>