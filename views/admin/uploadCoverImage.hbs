<ol class="breadcrumb mb-0">
    <li class="breadcrumb-item"><a href="/admin/projects">Projects</a></li>
    <li class="breadcrumb-item"><a href="/admin//projects/projectDetails/{{project.alias}}">{{project.name}}</a></li>
    <li class="breadcrumb-item active ">Upload cover image</li>
</ol>

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-2">
        <h1 class="h2">Upload Image</h1>
    </div>

    {{#if message}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle pr-3"></i>{{message}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/if}}

    <div class="row">
        <div class="col-sm-4">

            <form action="/admin/projects/projectDetails/upload/coverImage/{{project.alias}}"
                enctype="multipart/form-data" method="POST">
                <div class="form-group">
                    <input type="file" class="form-control-file" name="coverImageUrl" id="coverImageUrl">
                    <label for="coverImageUrl"></label>
                    <button type="submit" class="btn btn-info btn-custom-primary my-3">Upload</button>
                </div>
            </form>
        </div>

        <div class="col-sm-8 ">
            {{#if project.coverImageUrl }}
            <img src="{{project.coverImageUrl}}" class="img-fluid img-thumbnail" alt="">
            {{/if}}
        </div>
    </div>
</div>