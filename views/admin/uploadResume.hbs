<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center my-2">
        <h1 class="h2">Upload Resume</h1>
    </div>

    {{#if message}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle pr-3"></i>{{message}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/if}}

    <div class="row">
        <div class="col-sm-4">
            <form action="/admin/projects/projectDetails/upload/resume" enctype="multipart/form-data" method="POST">
                <div class="form-group">
                    <input type="file" class="form-control-file" name="resume" id="resume">
                    <label for="resume"></label>
                    <button type="submit" class="btn btn-info btn-custom-primary my-3">Upload</button>
                </div>
            </form>
        </div>

        <div class="col-sm-8 ">
            <iframe src="https://portfolio-app-uploads.s3.ap-south-1.amazonaws.com/resume/resume.pdf" width="100%"
                height="500px">
            </iframe>
        </div>
    </div>
</div>