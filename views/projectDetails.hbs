<div class="container pt-3">
    <a href="/projects" class='btn btn-link p-0 btn-sm'><i class="fas fa-chevron-left pr-1"></i>Go Back</a>
    <h1 class="font-weight-bold ">{{project.name}}</h1>
    <h6 class=" text-muted">{{project.subheading}}</h6>
    <div class="row pb-2">
        <div class="col-sm-7 p-3 border-right">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    {{#each project.carouselUrl}}
                    <div class="carousel-item {{#if @first}}active{{/if}}">
                        <img src="{{this}}" class="d-block w-100 " alt="{{project.name}}">
                    </div>
                    {{/each}}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-sm-5 p-3">
            <p class="text-justify">
                {{project.description}}
            </p>

            <a href="{{project.demoUrl}}" class="btn btn-secondary" target="_blank">Demo</a>
            <a href="{{project.githubUrl}}" class="btn btn-secondary" target="_blank">Github</a>

        </div>
    </div>

</div>